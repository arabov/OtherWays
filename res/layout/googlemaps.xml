<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp" xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gridLayout"
            android:background="@color/abs__bright_foreground_holo_dark">
        <Button
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_radio"
                android:id="@+id/centerButton" android:layout_row="0" android:layout_column="0"/>
        <Button
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/ic_input_add"
                android:id="@+id/addMarker" android:layout_row="0" android:layout_column="1"/>

    </GridLayout>
