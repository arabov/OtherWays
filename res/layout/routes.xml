<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/scrollView">
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Достопримечательности"
                    android:id="@+id/attractionsroutes" android:layout_column="0" android:checked="false"
                    android:clickable="true"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Развлечения"
                    android:id="@+id/entertainmentsroutes" android:layout_column="0" android:checked="false"
                    android:clickable="true"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Для детей"
                    android:id="@+id/childroutes" android:layout_column="0" android:checked="false"
                    android:clickable="true"/>
        </TableRow>

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:id="@+id/routesButton" android:clickable="true"/>

    </TableLayout>
</ScrollView>