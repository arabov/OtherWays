<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/regstatus" android:layout_gravity="center"/>
    <EditText
            android:id="@+id/reglogin"
            android:layout_height="wrap_content"
            android:hint="login"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
    </EditText>
    <EditText
            android:id="@+id/regpassword"
            android:layout_height="wrap_content"
            android:hint="password"
            android:inputType="textPassword"
            android:layout_width="fill_parent" android:layout_alignLeft="@+id/reglogin" android:layout_below="@+id/reglogin"
            android:layout_gravity="center">
    </EditText>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/registerbutton" android:layout_gravity="center"/>

</LinearLayout>